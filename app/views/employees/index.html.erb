<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark text-center">
      <tr>
        <th scope="col">Emp Name</th>
        <th scope="col">Emp Code</th>
        <th scope="col">Designation</th>
        <th scope="col">Contact Number</th>
        <th scope="col">Email ID</th>
        <th scope="col">Emp Joining Date</th>
        <th scope="col">Department</th>
        <th scope="col">Location</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr class="text-center">
          <td><%= employee.emp_name %></td>
          <td><%= employee.emp_code %></td>
          <td><%= employee.designation %></td>
          <td><%= employee.contact %></td>
          <td><%= employee.email %></td>
          <td><%= employee.emp_joining_date %></td>
          <td><%= all_departments.find(employee.department_id).department %></td>
          <td><%= all_locations.find(employee.location_id).location %></td>
          <td><%= link_to "View", employee_path(id: employee.id), class: "btn btn-success" %></td>
          <% if is_authorized? %>
            <td><%= link_to "Edit", edit_employee_path(id: employee.id), class: "btn btn-info" %></td>
            <td><%= link_to "Delete", employee_path(id: employee.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>