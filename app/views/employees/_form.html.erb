<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', obj:@employee %>
        <%= form_with(model: @employee, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :"Employee Name", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :emp_name, class: "form-control shadow rounded", placeholder: "Enter employee name" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :"Employee Code", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :emp_code, class: "form-control shadow rounded", placeholder: "Enter employee code" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :"Designation", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :designation, class: "form-control shadow rounded", placeholder: "Enter employee designation" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :"Contact Number", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :contact, class: "form-control shadow rounded", placeholder: "Enter employee contact number" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :"Email ID", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email ID" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :"Employee Joining Date", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.date_field :emp_joining_date, class: "form-control shadow rounded" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :Location, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.collection_select(:location_id, Location.all, :id, :location, {}, 
                { class: "form-control shadow rounded" }) %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :Department, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.collection_select(:department_id, Department.all, :id, :department, {}, 
                { class: "form-control shadow rounded" }) %>
              </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit(@employee.new_record? ? "Create" : "Update", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>
    </div>
  </div>
</div>
