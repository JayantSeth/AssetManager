<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <% if current_user.admin? %>
          <th colspan="2">Action</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <% if current_user.admin? %>
            <td><%= link_to "Approve", approve_path(the_user_id: user.id), method: :post, class: "btn btn-success" %></td>
            <td><%= link_to "Reject", reject_path(the_user_id: user.id), method: :post, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>