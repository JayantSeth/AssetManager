<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', obj:@make_model %>
        <%= form_with(model: @make_model, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :make, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :make, class: "form-control shadow rounded", placeholder: "Enter a make" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :model, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :model, class: "form-control shadow rounded", placeholder: "Enter a model" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :Asset_Type, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.select :asset_type, @asset_types_list, {}, { class: "form-control shadow rounded" } %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :comment, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :comment, class: "form-control shadow rounded", placeholder: "Enter a comment" %>
              </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit(@make_model.new_record? ? "Create" : "Update", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>
    </div>
  </div>
</div>
