<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark text-center">
      <tr>
        <th scope="col">Location Type</th>
        <th scope="col">Comment</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @location_types.each do |location_type| %>
        <tr class="text-center">
          <td><%= location_type.location_type %></td>
          <td><%= location_type.comment %></td>
          <td><%= link_to "View", location_type_path(id: location_type.id), class: "btn btn-success" %></td>
          <% if is_authorized? %>
            <td><%= link_to "Edit", edit_location_type_path(id: location_type.id), class: "btn btn-info" %></td>
            <td><%= link_to "Delete", location_type_path(id: location_type.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>