<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark text-center">
      <tr>
        <th scope="col">Department</th>
        <th scope="col">Comment</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <tr class="text-center">
          <td><%= department.department %></td>
          <td><%= department.comment %></td>
          <td><%= link_to "View", department_path(id: department.id), class: "btn btn-success" %></td>
          <% if is_authorized? %>
            <td><%= link_to "Edit", edit_department_path(id: department.id), class: "btn btn-info" %></td>
            <td><%= link_to "Delete", department_path(id: department.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>