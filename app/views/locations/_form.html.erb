<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', obj:@location %>
        <%= form_with(model: @location, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :Location, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :location, class: "form-control shadow rounded", placeholder: "Enter a location" %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :Location_Type, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.select :location_type, @location_types_list, {}, { class: "form-control shadow rounded" } %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :comment, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :comment, class: "form-control shadow rounded", placeholder: "Enter a comment" %>
              </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit(@location.new_record? ? "Create" : "Update", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>
    </div>
  </div>
</div>
