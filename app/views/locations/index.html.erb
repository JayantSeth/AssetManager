<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark text-center">
      <tr>
        <th scope="col">Location</th>
        <th scope="col">Location Type</th>
        <th scope="col">Comment</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr class="text-center">
          <td><%= location.location %></td>
          <td><%= all_location_types.find(location.location_type_id).location_type %></td>
          <td><%= location.comment %></td>
          <td><%= link_to "View", location_path(id: location.id), class: "btn btn-success" %></td>
          <% if is_authorized? %>
            <td><%= link_to "Edit", edit_location_path(id: location.id), class: "btn btn-info" %></td>
            <td><%= link_to "Delete", location_path(id: location.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>