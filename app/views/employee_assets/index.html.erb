<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark text-center">
      <tr>
        <th scope="col">Emp Name</th>
        <th scope="col">Emp Code</th>
        <th scope="col">Designation</th>
        <th scope="col">Contact Number</th>
        <th scope="col">Email ID</th>
        <th scope="col">Emp Joining Date</th>
        <th scope="col">Department</th>
        <th scope="col">Location</th>
        <th scope="col">Hostname</th>
        <th scope="col">Make</th>
        <th scope="col">Model</th>
        <th scope="col">Serial Number</th>
        <th scope="col">Asset Type</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @employee_assets.each do |employee_asset| %>
        <tr class="text-center">
          <td><%= all_employees.find(employee_asset.employee_id).emp_name %></td>
          <td><%= all_employees.find(employee_asset.employee_id).emp_code %></td>
          <td><%= all_employees.find(employee_asset.employee_id).designation %></td>
          <td><%= all_employees.find(employee_asset.employee_id).contact %></td>
          <td><%= all_employees.find(employee_asset.employee_id).email %></td>
          <td><%= all_employees.find(employee_asset.employee_id).emp_joining_date %></td>
          <td><%= all_departments.find(all_employees.find(employee_asset.employee_id).department_id).department %></td>
          <td><%= all_locations.find(all_employees.find(employee_asset.employee_id).location_id).location %></td>
          <td><%= all_assets.find(employee_asset.enterprise_asset_id).hostname %></td> 
          <td><%= all_make_models.find(all_assets.find(employee_asset.enterprise_asset_id).make_model_id).make %></td> 
          <td><%= all_make_models.find(all_assets.find(employee_asset.enterprise_asset_id).make_model_id).model %></td> 
          <td><%= all_asset_types.find(all_make_models.find(all_assets.find(employee_asset.enterprise_asset_id).make_model_id).asset_type_id).asset_type %></td> 
          <td><%= link_to "View", employee_asset_path(id: employee_asset.id), class: "btn btn-success" %></td>
          <% if is_authorized? %>
            <td><%= link_to "Edit", edit_employee_asset_path(id: employee_asset.id), class: "btn btn-info" %></td>
            <td><%= link_to "Delete", employee_asset_path(id: employee_asset.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>