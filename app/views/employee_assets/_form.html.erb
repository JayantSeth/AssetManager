<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', obj:@employee_asset %>
        <%= form_with(model: @employee_asset, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :"Employee Code", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.select :emp_code, @employees_list, {}, { class: "form-control shadow rounded" } %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :"Asset Serial Number", class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.select :serial_number, @assets_list, {}, { class: "form-control shadow rounded" } %>
              </div>
          </div>
          <div class="form-group row">
            <%= f.label :comment, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :comment, class: "form-control shadow rounded", placeholder: "Enter a comment" %>
              </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit(@employee_asset.new_record? ? "Create" : "Update", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>
    </div>
  </div>
</div>
