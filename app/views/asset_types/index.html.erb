<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark text-center">
      <tr>
        <th scope="col">Asset Type</th>
        <th scope="col">Comment</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @asset_types.each do |asset_type| %>
        <tr class="text-center">
          <td><%= asset_type.asset_type %></td>
          <td><%= asset_type.comment %></td>
          <td><%= link_to "View", asset_type_path(id: asset_type.id), class: "btn btn-success" %></td>
          <% if is_authorized? %>
            <td><%= link_to "Edit", edit_asset_type_path(id: asset_type.id), class: "btn btn-info" %></td>
            <td><%= link_to "Delete", asset_type_path(id: asset_type.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>